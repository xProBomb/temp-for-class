@{
    ViewData["Title"] = "Home Page";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-6 offset-md-3 text-center">
            <h1 class="display-4">Welcome to My Homework 1 Website</h1>

            <form method="post" action="/Home/TeamViewer">
                <div class="form-group">
                    <label for="teamSize">Team Size</label>
                    <input type="number" class="form-control" id="teamSize" name="TeamSize" min="2" max="10"
                        placeholder="Enter team size" required>
                </div>
                <div class="form-group mt-3">
                    <label for="names">Names</label>
                    <textarea class="form-control" id="names" name="Names" rows="5"
                        placeholder="Enter names, one per line" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary mt-3">View Teams</button>
            </form>

        </div>
    </div>
</div>